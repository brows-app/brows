<UserControl x:Class="Brows.CommandContextHintControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Brows">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="Background" Value="#F8D775"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </UserControl.Style>
    <ContentControl Content="{Binding}" ContentTemplateSelector="{x:Static local:CommandContextHintControl.ItemTemplateSelector}"/>
</UserControl>

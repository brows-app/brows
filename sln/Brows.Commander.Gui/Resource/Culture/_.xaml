<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:browsCommandFramework="clr-namespace:Brows;assembly=Brows.Command.Framework"
                    xmlns:brows="http://schemas.brows.app/xaml">
    <ControlTemplate x:Key="CommandContextDataGesture_Hint_Down_Up">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Press "/>
            <brows:KeyboardTriggerControl DataContext="{x:Static browsCommandFramework:CommandContextDataGesture.Up}"/>
            <TextBlock Text=" or "/>
            <brows:KeyboardTriggerControl DataContext="{x:Static browsCommandFramework:CommandContextDataGesture.Down}"/>
            <TextBlock Text=" to navigate up or down."/>
        </StackPanel>
    </ControlTemplate>
</ResourceDictionary>
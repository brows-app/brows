<UserControl x:Class="Brows.PanelStateControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{DynamicResource Global_Default_Foreground}" Opacity=".1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Style>
    <Grid Margin="15 4 0 3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Style="{DynamicResource PanelStateItemsCountTextBlockStyle}"/>
        <TextBlock Grid.Column="1" Style="{DynamicResource PanelStateItemsSelectedCountTextBlockStyle}"/>
        <TextBlock Grid.Column="2" Style="{DynamicResource PanelStateItemsSortingCountTextBlockStyle}"/>
    </Grid>
</UserControl>

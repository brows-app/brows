<TextBox x:Class="Brows.CommandPaletteInputTextBox"
         x:ClassModifier="internal"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <TextBox.Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource CommandPaletteInput_Default_Background}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CaretBrush" Value="{DynamicResource CommandPaletteInput_Default_Foreground}"/>
            <Setter Property="FontFamily" Value="{DynamicResource CommandPaletteInput_Default_FontFamily}"/>
            <Setter Property="FontSize" Value="{DynamicResource CommandPaletteInput_Default_FontSize}"/>
            <Setter Property="FontWeight" Value="{DynamicResource CommandPaletteInput_Default_FontWeight}"/>
            <Setter Property="Foreground" Value="{DynamicResource CommandPaletteInput_Default_Foreground}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="SelectionBrush" Value="{DynamicResource CommandPaletteInput_Selection_Background}"/>
        </Style>
    </TextBox.Style>
</TextBox>

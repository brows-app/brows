<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:System;assembly=mscorlib"
                    xmlns:brows="http://schemas.brows.app/xaml"
                    xmlns:browsCommandFramework="clr-namespace:Brows;assembly=Brows.Command.Framework">
    <s:String x:Key="Bookmark_Bookmarks">Bookmarks</s:String>

    <DataTemplate x:Key="CommandContextHint_BookmarkData">
        <StackPanel>
            <Control Template="{DynamicResource CommandContextDataGesture_Hint_Down_Up}"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Press "/>
                <brows:KeyboardTriggerControl DataContext="{x:Static browsCommandFramework:CommandContextDataGesture.Enter}"/>
                <TextBlock Text=" to open the selected bookmark."/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Press "/>
                <brows:KeyboardTriggerControl DataContext="{x:Static browsCommandFramework:CommandContextDataGesture.Remove}"/>
                <TextBlock Text=" to delete the selected bookmark."/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Press "/>
                <brows:KeyboardTriggerControl DataContext="{x:Static browsCommandFramework:CommandContextDataGesture.Clear}"/>
                <TextBlock Text=" to delete all bookmarks."/>
            </StackPanel>            
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>

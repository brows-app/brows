<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="CommandContextHint_CommandProcessData">
        <StackPanel>
            <TextBlock>
                <Run Text="Press"/>
                <Run Text="Alt" Style="{DynamicResource CommandContextHint_KeyboardKey}"/><Run Text="+"/><Run Text="Up" Style="{DynamicResource CommandContextHint_KeyboardKey}"/><Run Text="/"/><Run Text="Down" Style="{DynamicResource CommandContextHint_KeyboardKey}"/>
                <Run Text="to scroll the process output."/>
            </TextBlock>
            <TextBlock>
                <Run Text="Press"/>
                <Run Text="Alt" Style="{DynamicResource CommandContextHint_KeyboardKey}"/><Run Text="+"/><Run Text="Left" Style="{DynamicResource CommandContextHint_KeyboardKey}"/><Run Text="/"/><Run Text="Right" Style="{DynamicResource CommandContextHint_KeyboardKey}"/>
                <Run Text="to cycle through the process history."/>
            </TextBlock>
        </StackPanel>
    </DataTemplate>

    <Style TargetType="TextBlock" x:Key="Process_PID_Text" BasedOn="{StaticResource Process_Default_Text}">
        <Setter Property="Text" Value="PID"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="Process_ExitCode_Text" BasedOn="{StaticResource Process_Default_Text}">
        <Setter Property="Text" Value="Exit code"/>
    </Style>
</ResourceDictionary>
<UserControl x:Class="Brows.DriveProviderControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:brows="http://schemas.brows.app/xaml">
    <brows:EntryProviderGrid>
        <brows:EntryProviderGrid.Style>
            <Style TargetType="brows:EntryProviderGrid">
                <Setter Property="Icon" Value="{Binding Icon}"/>
                <Setter Property="IconTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <brows:EntryIconImage Source="{Binding}"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Text" Value="{Binding Name}"/>
                <Setter Property="TextTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <brows:EntryDataTextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </brows:EntryProviderGrid.Style>
    </brows:EntryProviderGrid>
</UserControl>

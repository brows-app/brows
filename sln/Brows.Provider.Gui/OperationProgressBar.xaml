<ProgressBar x:Class="Brows.OperationProgressBar"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ProgressBar.Style>
        <Style TargetType="ProgressBar">
            <Setter Property="Background" Value="{DynamicResource OperationProgressBar_Default_Background}"/>
            <Setter Property="Foreground" Value="{DynamicResource OperationProgressBar_Default_Foreground}"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Margin" Value="5,2.5"/>
            <Setter Property="MinWidth" Value="50"/>
        </Style>
    </ProgressBar.Style>
</ProgressBar>
